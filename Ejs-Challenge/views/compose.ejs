<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="textField">Title</label>
    <input type="text" name="titleText" class="form-control" id="textField" placeholder="Enter title here...">
    <label for="post">Post</label>
    <textarea class="form-control" name="postText" id="post" rows="3" placeholder="Enter post text here..."></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>